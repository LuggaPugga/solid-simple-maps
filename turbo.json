{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["solid-simple-maps#build", "example#build", "docs#build"]
		},
		"solid-simple-maps#build": {
			"outputs": ["dist/**"]
		},
		"example#build": {
			"dependsOn": ["solid-simple-maps#build"],
			"outputs": ["dist/**"]
		},
		"docs#build": {
			"outputs": [".vitepress/**"]
		},
		"watch": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
